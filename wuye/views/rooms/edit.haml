%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:rooms, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:rooms, :new)
  %li.active=link_to tag_icon(:edit, pat(:edit)), url(:rooms, :edit, :id => @room.id)

.tabs-content
  = form_for :room, url(:rooms, :update, :id => @room.id), :method => :put, :class => 'form-horizontal' do |f|
    =partial 'rooms/form', :locals => { :f => f }
