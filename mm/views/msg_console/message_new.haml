
%ul.breadcrumb.list-inline
  %li=link_to "home",url("/")   
  %li=link_to "all users console",url(:msg_console,:list_all_user)

.tabs-content
= form_tag '/mm/msg_console/send_msg', :class => 'new-form', :method => 'post' do
  = flash_tag(:notice)
  = field_set_tag do
    %p
      = label_tag :user_id
      = text_field_tag :pu_id, :value => @puser.pu_id
    %p
      = label_tag :channel_id
      = text_field_tag :pc_id, :value =>  @puser.pc_id
    %p
      = label_tag :push_type
      = select_tag :push_type, :options => ['0','1', '2'], :selected => '1'

    /%p
    /  = label_tag :message_type
    /  = select_tag :message_type, :options => ['0', '1'], :selected => '1'
    %p
      = label_tag :text_msg
      = text_area_tag :text_msg

  = field_set_tag(:class => 'buttons') do
    = submit_tag "send_msg"
